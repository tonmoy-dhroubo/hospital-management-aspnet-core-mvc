@model IEnumerable<HospitalManagement.Models.Capacity>

@{
    ViewData["Title"] = "Index";
}

<h1>Hospital Capacity</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CapacityCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacancy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CapacityCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacancy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CapacityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CapacityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CapacityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
